{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
				"ecmaFeatures": {
					"jsx": true
				}
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": 1,
        "no-debugger": 1,
        "comma-dangle": 0,
				"no-unused-vars": 1
    }
}
